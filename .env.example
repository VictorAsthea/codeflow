# Codeflow Configuration

# Server
CODEFLOW_PORT=8765
CODEFLOW_HOST=127.0.0.1

# Project path (the project you want Codeflow to work on)
# Leave empty to select via UI on first launch
CODEFLOW_PROJECT_PATH=

# Claude Code defaults
CODEFLOW_DEFAULT_MODEL=claude-sonnet-4-20250514
CODEFLOW_DEFAULT_INTENSITY=medium

# Optional: Enable debug mode
CODEFLOW_DEBUG=false

# PR Monitoring (auto-stop tasks when PR is merged)
CODEFLOW_PR_MONITORING_ENABLED=true
CODEFLOW_PR_CHECK_INTERVAL=300
CODEFLOW_GITHUB_WEBHOOK_SECRET=
